{% block content %}
    <section>
        <div class="container">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% for message in app.flashes('notice') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            <h1 class="title-h1"><span>Connexion</span></h1>

            {{ form(form, {attr:{novalidate: 'novalidate' }}) }}

            <div class="new-register">
                <h3 class="title-h1"><span>Nouveau chez Pet Shop ?</span></h3>
                <a href="{{ path('page_register') }}" class="btn btn-default">Cr√©er un compte</a>
            </div>


        </div>
    </section>


{% endblock %}


