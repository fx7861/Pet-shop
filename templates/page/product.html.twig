{%  extends 'layout.html.twig' %}

{% block title %}
    {{ product.title }}
{% endblock %}

{% block content %}
    <section>
        <div class="container">

            <div class="row">
                <div class="product-details"><!--product-details-->
                    <div class="col-sm-5">
                        <div class="view-product">
                            <img src="{{ asset('images/photo/' ~ product.photo) }}" alt="{{ product.title }}" />
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="product-information"><!--/product-information-->
                            <h2>{{ product.title }}</h2>
                            <p>Rèf: xxx-id</p>
                            <span>
                                <div class="format-price">
                                    <span>{{ product.price }} €</span>
                                    <form action="{{ path('add_panier', {'id': product.id}) }}" method="get">
                                        <label for="qte">Quantité:</label>
                                        <select name="qte" id="qte">
                                            {% for i in 1..10 %}
                                                <option value="{{ i }}">{{ i }}</option>
                                            {% endfor %}
                                        </select>
                                        <input type="hidden" name="redirect" value="{{ app.request.server.get('REQUEST_URI') }}">
                                        <button type="submit" class="btn btn-fefault cart">
                                            <i class="fa fa-shopping-cart"></i>
                                            Ajouter au panier
                                        </button>
                                    </form>
                                </div>

                            </span>
                            <p><b>Description:</b></p>
                            <p>{{ product.description | summary | raw }}</p>
                            <a href="#details">Voir la description complète</a>
                        </div><!--/product-information-->
                    </div>
                </div><!--/product-details-->
            </div>
        </div>
    </section>
{% endblock %}