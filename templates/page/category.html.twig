{% extends "layout.html.twig" %}

{% block title %}
  {{ category.name }}
{% endblock %}

{% block content %}
    <section id="slider"><!--slider-->
        <div class="container">
            <h1 class="title title-h1">{{ category.name }}</h1>
            <div class="row">
                <div class="tab-content">
                    {% for sub in subCategory %}
                        <div class="col-sm-3">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <a href="{{ path('page_subcategory', {
                                            'category': category.slug,
                                            'slug': sub.slug
                                        }) }}">
                                            <img src="{{ asset('images/category/' ~ sub.photo) }}" alt="" />
                                            <h2>{{ sub.name }}</h2>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
