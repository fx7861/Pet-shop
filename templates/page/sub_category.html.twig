{% extends 'layout.html.twig' %}

{% block title %}
    {{ subCategory.name | capitalize }}
{% endblock %}

{% block content %}
    <section>
        <div class="container">
            <h1 class="title title-h1">{{ subCategory.name | capitalize }}</h1>
            <div class="row">
                {% for product in products %}
                    <div class="col-sm-3">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <a href="{{ path('page_product', {
                                        'category': subCategory.category.slug,
                                        'subCategory': subCategory.slug,
                                        'slug': product.slug,
                                        'id': product.id
                                    }) }}">
                                        <img src="{{ asset('images/photo/' ~ product.photo) }}" alt="" />
                                        <h4>{{ product.title }}</h4>
                                    </a>
                                    <h2>{{ product.price }} â‚¬</h2>
                                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Ajouter au panier</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
