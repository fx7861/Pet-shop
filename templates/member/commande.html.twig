{%  extends 'layout.html.twig' %}

{% block title %}
    Commande
{% endblock %}

{% set totalHT = 0 %}
{% set tva = 0 %}
{% set totalTTC = 0 %}

{% block content %}
    <section id="cart_items">
        <div class="container">
            <h1 class="title-h1"><span>Livraison</span></h1>
            <div class="row">
                <div class="col-sm-6">
                    <div class="adresse-pet">
                        <h4><i class="fas fa-truck-loading"></i> Votre adresse de livraison:</h4>
                        <p>{{ app.user.name }} {{ app.user.username }}</p>
                        <p>{{ app.user.adress }}</p>
                        <p>{{ app.user.postal }} {{ app.user.city }}</p>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="adresse-pet">
                        <h4><i class="far fa-envelope"></i> Votre adresse de facturation:</h4>
                        <p>{{ app.user.name }} {{ app.user.username }}</p>
                        <p>{{ app.user.adress }}</p>
                        <p>{{ app.user.postal }} {{ app.user.city }}</p>
                    </div>
                </div>
            </div>

            <h2 class="title-h1"><span>Récapitulatif de la commande</span></h2>
            {% if products is not empty and products is defined %}
                <div class="table-responsive cart_info">
                    <table class="table table-condensed">
                        <thead>
                            <tr class="cart_menu">
                                <td class="image">Item</td>
                                <td class="description">Libellé</td>
                                <td class="price">Prix HT</td>
                                <td class="quantity">Quantité</td>
                                <td class="total">Total HT</td>
                            </tr>
                        </thead>
                        <tbody>
                            {% for product in products %}
                                {% set price = product.price | HT %}
                                <tr>
                                    <td class="cart_product">
                                        <img src="{{ asset('images/photo/' ~ product.photo) }}" alt="">
                                    </td>
                                    <td class="cart_description">
                                        <h4>{{ product.title }}</h4>
                                    </td>
                                    <td class="cart_price">
                                        <p>{{ price }} €</p>
                                    </td>
                                    <td class="cart_quantity">
                                        <div class="cart_quantity_button">
                                            <p>{{ panier[product.id] }}</p>
                                        </div>
                                    </td>
                                    <td class="cart_total">
                                        <p class="cart_total_price">{{ price * panier[product.id] }} €</p>
                                    </td>
                                </tr>
                                {% set totalHT = totalHT + (price * panier[product.id]) %}

                            {% endfor %}

                            {% set tva = totalHT | TVA %}
                            {% set totalTTC = totalHT + tva %}

                            <tr>
                                <td colspan="3">&nbsp;</td>
                                <td colspan="2">
                                    <table class="table table-condensed total-result">
                                        <tr>
                                            <td>Total panier</td>
                                            <td>{{ totalHT }} €</td>
                                        </tr>
                                        <tr>
                                            <td>Tva</td>
                                            <td>{{ tva }} €</td>
                                        </tr>
                                        <tr class="shipping-cost">
                                            <td>Frais de livraison</td>
                                            <td>Gratuit</td>
                                        </tr>
                                        <tr>
                                            <td>Total</td>
                                            <td><span>{{ totalTTC }} €</span></td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="text-right">
                    <a href="{{ path('membre_commande') }}" class="btn-form-carre">Payer</a>
                </div>

            {% else %}
                <div class="alert alert-info">
                    Aucun produit dans le panier.
                </div>
            {% endif %}

        </div>
    </section>
{% endblock %}